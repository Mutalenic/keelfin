<!DOCTYPE html>
<html>
  <head>
    <title>Keelfin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- TODO: Replace Tailwind Play CDN with tailwindcss-rails gem or compiled CSS before go-live -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Favicon -->
    <%= favicon_link_tag 'favicon.svg', type: 'image/svg+xml' %>
    
    <!-- Chart.js for interactive charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.7/dist/chart.umd.min.js"
            integrity="sha256-IGtui7APx7uix+6AykHbPp4FunvgqjWr66nP1TV/XQ4="
            crossorigin="anonymous"></script>
    <%= javascript_include_tag "application" %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex items-center space-x-6">
            <%= link_to root_path, class: 'flex items-center space-x-2 text-indigo-600 font-bold text-lg' do %>
              <i class="fa-solid fa-wallet"></i>
              <span>Keelfin</span>
            <% end %>
            <% if user_signed_in? %>
              <div class="hidden md:flex items-center space-x-4 text-sm font-medium">
                <%= link_to 'Dashboard',   dashboard_path,                class: 'text-gray-600 hover:text-indigo-600' %>
                <%= link_to 'Categories',  categories_path,               class: 'text-gray-600 hover:text-indigo-600' %>
                <%= link_to 'Budgets',     budgets_path,                  class: 'text-gray-600 hover:text-indigo-600' %>
                <%= link_to 'Debts',       debts_path,                    class: 'text-gray-600 hover:text-indigo-600' %>
                <%= link_to 'Goals',       financial_goals_path,          class: 'text-gray-600 hover:text-indigo-600' %>
                <%= link_to 'Investments', investments_path,              class: 'text-gray-600 hover:text-indigo-600' %>
                <%= link_to 'Recurring',   recurring_transactions_path,   class: 'text-gray-600 hover:text-indigo-600' %>
              </div>
            <% end %>
          </div>
          <div class="flex items-center space-x-4">
            <% if user_signed_in? %>
              <span class="hidden sm:block text-sm text-gray-500"><%= current_user.name %></span>
              <%= link_to 'Sign out', destroy_user_session_path,
                    data: { turbo_method: :delete },
                    class: 'text-sm text-red-500 hover:text-red-700 font-medium' %>
            <% else %>
              <%= link_to 'Sign in',  new_user_session_path,       class: 'text-sm text-indigo-600 hover:text-indigo-800 font-medium' %>
              <%= link_to 'Sign up',  new_user_registration_path,  class: 'text-sm bg-indigo-600 text-white px-3 py-1.5 rounded hover:bg-indigo-700 font-medium' %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <% if notice.present? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
        <div class="bg-green-50 border border-green-200 text-green-800 rounded px-4 py-3 text-sm" role="alert">
          <%= notice %>
        </div>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
        <div class="bg-red-50 border border-red-200 text-red-800 rounded px-4 py-3 text-sm" role="alert">
          <%= alert %>
        </div>
      </div>
    <% end %>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
