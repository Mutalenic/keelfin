<%= form_with(model: [investment, transaction], class: "space-y-6") do |form| %>
  <% if transaction.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6">
      <h2 class="font-bold mb-2"><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>
      <ul class="list-disc pl-5">
        <% transaction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Transaction Details -->
    <div class="space-y-6">
      <h3 class="text-lg font-medium border-b pb-2">Transaction Details</h3>
      
      <div class="mb-4">
        <%= form.label :transaction_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :transaction_type, 
          [
            ['Contribution', 'contribution'],
            ['Withdrawal', 'withdrawal'],
            ['Dividend', 'dividend'],
            ['Interest', 'interest'],
            ['Fee', 'fee']
          ],
          { include_blank: 'Select transaction type' },
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" }
        %>
      </div>
      
      <div class="mb-4">
        <%= form.label :amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="mt-1 flex rounded-md shadow-sm">
          <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500">K</span>
          <%= form.number_field :amount, step: "0.01", min: "0", class: "flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-r-md border border-gray-300 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>
      
      <div class="mb-4">
        <%= form.label :transaction_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.date_field :transaction_date, value: transaction.transaction_date || Date.current, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
    </div>
    
    <!-- Additional Information -->
    <div class="space-y-6">
      <h3 class="text-lg font-medium border-b pb-2">Additional Information</h3>
      
      <div class="mb-4">
        <%= form.label :description, "Description (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g., Monthly contribution to retirement fund" %>
      </div>
      
      <div class="mb-4">
        <%= form.label :reference_number, "Reference Number (Optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :reference_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g., TRX123456" %>
      </div>
    </div>
  </div>
  
  <!-- Impact Preview -->
  <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <h3 class="font-medium text-lg mb-2">Transaction Impact Preview</h3>
    <p class="text-sm text-gray-700">This transaction will have the following impact on your investment:</p>
    
    <div class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <p class="text-xs text-gray-500">Current Investment Value</p>
        <p class="text-lg font-bold">K<%= number_with_precision(investment.current_value, precision: 2) %></p>
      </div>
      <div>
        <p class="text-xs text-gray-500">New Investment Value After Transaction</p>
        <p class="text-lg font-bold" id="new-value">--</p>
      </div>
    </div>
  </div>
  
  <div class="pt-5 border-t border-gray-200">
    <div class="flex justify-end">
      <%= link_to "Cancel", investment_investment_transactions_path(investment), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= form.submit transaction.new_record? ? "Create Transaction" : "Update Transaction", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const amountField = document.querySelector('#investment_transaction_amount');
    const typeField = document.querySelector('#investment_transaction_transaction_type');
    const newValueElement = document.querySelector('#new-value');
    const currentValue = <%= investment.current_value || 0 %>;
    
    function calculateImpact() {
      const amount = parseFloat(amountField.value) || 0;
      const type = typeField.value;
      let newValue = currentValue;
      
      if (type === 'contribution' || type === 'dividend' || type === 'interest') {
        newValue = currentValue + amount;
      } else if (type === 'withdrawal' || type === 'fee') {
        newValue = Math.max(0, currentValue - amount);
      }
      
      newValueElement.textContent = 'K' + newValue.toFixed(2);
    }
    
    if (amountField && typeField) {
      amountField.addEventListener('input', calculateImpact);
      typeField.addEventListener('change', calculateImpact);
      
      // Calculate initial values if editing existing transaction
      calculateImpact();
    }
  });
</script>
