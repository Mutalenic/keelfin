<nav class="flex justify-center align-center space-x-4 bg-[#3778c2] text-white">
  <ul class="w-full flex flex-row justify-between align-center p-5">
    <li>
      <%= link_to '', root_path, class: "text-xl fa-solid fa-home" %>
    </li>
    <li>
      <h1 class="text-xl uppercase">Categories</h1>
    </li>
    <li>
      <%= button_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white text-l uppercase" %>
    </li>
  </ul>
</nav>

<div class="container mx-auto px-4 py-6">
  <!-- Header with stats -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div>
        <h2 class="text-2xl font-bold text-gray-800">Your Categories</h2>
        <p class="text-gray-600">Manage your spending categories</p>
      </div>
      <div class="mt-4 md:mt-0">
        <%= link_to "Add New Category", new_category_path, class: "bg-[#3778c2] hover:bg-[#2c5d99] text-white font-bold py-2 px-4 rounded-lg flex items-center" %>
      </div>
    </div>
  </div>

  <!-- Category type tabs -->
  <div class="mb-6 bg-white rounded-lg shadow-md overflow-hidden">
    <div class="flex overflow-x-auto">
      <button class="px-6 py-3 bg-[#3778c2] text-white font-semibold">All</button>
      <button class="px-6 py-3 hover:bg-gray-100">Groceries</button>
      <button class="px-6 py-3 hover:bg-gray-100">Fixed</button>
      <button class="px-6 py-3 hover:bg-gray-100">Variable</button>
      <button class="px-6 py-3 hover:bg-gray-100">Discretionary</button>
    </div>
  </div>

  <!-- Categories grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @categories.each do |category| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow" style="border-top: 4px solid <%= category.color || '#3778c2' %>">
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 rounded-full flex items-center justify-center text-white mr-4" style="background-color: <%= category.color || '#3778c2' %>">
              <i class="<%= category.icon_name.present? ? category.icon_name : 'fa-solid fa-tag' %> text-xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-bold"><%= category.name %></h3>
              <span class="text-xs font-semibold inline-block py-1 px-2 rounded-full text-gray-600 bg-gray-200">
                <%= category.category_type&.capitalize || "Uncategorized" %>
              </span>
            </div>
          </div>
          
          <% if category.description.present? %>
            <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= category.description %></p>
          <% end %>
          
          <div class="flex justify-between items-center mb-4">
            <div>
              <p class="text-gray-500 text-sm">Total Spending</p>
              <p class="text-xl font-bold">K<%= number_with_precision(@category_spending[category.id] || 0, precision: 2) %></p>
            </div>
            <div class="text-right">
              <p class="text-gray-500 text-sm">Transactions</p>
              <p class="text-xl font-bold"><%= @category_counts[category.id] || 0 %></p>
            </div>
          </div>
          
          <div class="flex justify-between mt-4">
            <%= link_to "View Details", category_path(category), class: "text-[#3778c2] hover:text-[#2c5d99] font-semibold" %>
            <%= link_to "Add Payment", new_category_payment_path(category), class: "text-green-600 hover:text-green-800 font-semibold" %>
          </div>
        </div>
        
        <div class="bg-gray-50 px-6 py-3 flex justify-between">
          <div class="flex space-x-2">
            <%= link_to edit_category_path(category), class: "text-gray-600 hover:text-gray-900" do %>
              <i class="fa-solid fa-pencil"></i>
            <% end %>
            <%= button_to category_path(category), method: :delete, data: { turbo_confirm: 'Are you sure? This will delete all payments in this category.' }, class: "text-red-500 hover:text-red-700 bg-transparent border-0 p-0" do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
          <small class="text-gray-500">Created <%= time_ago_in_words(category.created_at) %> ago</small>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if @categories.empty? %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <div class="text-gray-400 mb-4">
        <i class="fa-solid fa-folder-open text-5xl"></i>
      </div>
      <h3 class="text-xl font-bold text-gray-700 mb-2">No Categories Yet</h3>
      <p class="text-gray-600 mb-6">Create categories to organize your spending and track your budget</p>
      <%= link_to "Create Your First Category", new_category_path, class: "bg-[#3778c2] hover:bg-[#2c5d99] text-white font-bold py-2 px-6 rounded-lg" %>
    </div>
  <% end %>
</div>
