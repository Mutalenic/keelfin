<nav class="flex justify-center align-center space-x-4 bg-[#3778c2] text-white">
  <ul class="w-full flex flex-row justify-between align-center p-5">
    <li>
      <%= link_to '', @debt, class: "text-xl fa-solid fa-arrow-left" %>
    </li>
    <li>
      <h1 class="text-xl text-center uppercase">edit debt</h1>
    </li>
    <li>
      <%= button_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white text-l uppercase" %>
    </li>
  </ul>
</nav>

<div class="text-left px-3 mt-6">
  <h1 class="text-2xl font-bold mb-6">Edit Debt: <%= @debt.lender_name %></h1>
  
  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with(model: @debt, local: true) do |f| %>
      <% if @debt.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <h2 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@debt.errors.count, "error") %> prohibited this debt from being saved:
          </h2>
          <ul class="text-red-700 list-disc list-inside">
            <% @debt.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label :lender_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :lender_name, class: "w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g., Bayport, Madison" %>
        </div>

        <div>
          <%= f.label :principal_amount, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :principal_amount, class: "w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g., 50000", step: "0.01" %>
        </div>

        <div>
          <%= f.label :interest_rate, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :interest_rate, class: "w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g., 15.5", step: "0.01" %>
        </div>

        <div>
          <%= f.label :monthly_payment, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :monthly_payment, class: "w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g., 2500", step: "0.01" %>
        </div>

        <div>
          <%= f.label :start_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :start_date, class: "w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :end_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.date_field :end_date, class: "w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :status, 
                      options_for_select([['Active', 'active'], ['Paid Off', 'paid_off']], @debt.status),
                      { prompt: 'Select status' },
                      { class: "w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>

        <div>
          <%= f.label :term, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.number_field :term, class: "w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g., 24 (months)" %>
        </div>
      </div>

      <div class="mt-8 flex space-x-4">
        <%= f.submit "Update Debt", class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium" %>
        <%= link_to "Cancel", @debt, class: "bg-gray-300 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-400 font-medium" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <h3 class="font-semibold mb-2">ðŸ’¡ Debt Management Tips</h3>
    <ul class="text-sm text-gray-700 space-y-1 list-disc list-inside">
      <li>Keep your debt-to-income ratio below 30% for financial health</li>
      <li>Consider paying off high-interest loans first (avalanche method)</li>
      <li>Track your progress by updating payments regularly</li>
      <li>Set realistic end dates based on your monthly payment capacity</li>
    </ul>
  </div>
</div>
