<nav class="flex justify-center align-center space-x-4 bg-[#3778c2] text-white">
  <ul class="w-full flex flex-row justify-between align-center p-5">
    <li>
      <%= link_to '', root_path, class: "text-xl fa-solid fa-home" %>
    </li>
    <li>
      <h1 class="text-xl uppercase">Financial Goals</h1>
    </li>
    <li>
      <%= button_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white text-l uppercase" %>
    </li>
  </ul>
</nav>

<div class="container mx-auto px-4 py-6">
  <!-- Goals Summary -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
      <h3 class="text-sm text-gray-600 mb-2">Active Goals</h3>
      <p class="text-3xl font-bold"><%= @active_goals.count %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
      <h3 class="text-sm text-gray-600 mb-2">Completion Rate</h3>
      <p class="text-3xl font-bold"><%= @completion_rate %>%</p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
      <h3 class="text-sm text-gray-600 mb-2">Total Saved</h3>
      <p class="text-3xl font-bold">K<%= number_with_precision(@total_saved, precision: 2) %></p>
    </div>
  </div>
  
  <!-- Goals Progress Chart -->
  <%= render 'goals_chart' if @active_goals.any? %>

  <!-- Active Goals -->
  <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold">Active Goals</h2>
      <%= link_to "New Goal", new_financial_goal_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
    </div>
    
    <% if @active_goals.any? %>
      <div class="space-y-6">
        <% @active_goals.each do |goal| %>
          <div class="border rounded-lg p-4 hover:bg-gray-50 transition-colors">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="font-semibold text-lg"><%= link_to goal.name, financial_goal_path(goal) %></h3>
                <p class="text-sm text-gray-600"><%= goal.goal_type.humanize %> â€¢ Due <%= goal.target_date.strftime('%b %d, %Y') %></p>
                <p class="mt-2"><span class="font-medium">Target:</span> K<%= number_with_precision(goal.target_amount, precision: 2) %></p>
              </div>
              <div class="text-right">
                <span class="inline-block px-3 py-1 rounded-full text-sm font-semibold 
                  <%= case goal.priority
                      when 'high' then 'bg-red-100 text-red-800'
                      when 'medium' then 'bg-yellow-100 text-yellow-800'
                      else 'bg-green-100 text-green-800'
                      end %>">
                  <%= goal.priority.capitalize %>
                </span>
                <p class="mt-2 font-bold"><%= goal.progress_percentage %>% Complete</p>
              </div>
            </div>
            
            <!-- Progress Bar -->
            <div class="mt-4 w-full bg-gray-200 rounded-full h-2.5">
              <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= goal.progress_percentage %>%"></div>
            </div>
            
            <div class="mt-3 flex justify-between text-sm text-gray-600">
              <span>K<%= number_with_precision(goal.current_amount, precision: 2) %> of K<%= number_with_precision(goal.target_amount, precision: 2) %></span>
              <span><%= goal.days_remaining %> days left</span>
            </div>
            
            <div class="mt-4 flex justify-end space-x-2">
              <%= link_to "Update Progress", edit_financial_goal_path(goal), class: "text-blue-600 hover:text-blue-800" %>
              <%= link_to "Details", financial_goal_path(goal), class: "text-purple-600 hover:text-purple-800" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8 bg-gray-50 rounded-lg">
        <p class="text-gray-500 mb-4">You don't have any active financial goals yet.</p>
        <%= link_to "Create Your First Goal", new_financial_goal_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>

  <!-- Completed Goals -->
  <% if @completed_goals.any? %>
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <h2 class="text-xl font-semibold mb-6">Completed Goals</h2>
      
      <div class="space-y-4">
        <% @completed_goals.each do |goal| %>
          <div class="border rounded-lg p-4 bg-green-50">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="font-semibold"><%= goal.name %></h3>
                <p class="text-sm text-gray-600">Completed on <%= goal.completion_date.strftime('%b %d, %Y') %></p>
              </div>
              <div class="text-right">
                <p class="font-bold text-green-600">K<%= number_with_precision(goal.target_amount, precision: 2) %></p>
                <p class="text-sm text-green-800">100% Complete</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Overdue Goals -->
  <% if @overdue_goals.any? %>
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8 border-l-4 border-red-500">
      <h2 class="text-xl font-semibold mb-6">Overdue Goals</h2>
      
      <div class="space-y-4">
        <% @overdue_goals.each do |goal| %>
          <div class="border rounded-lg p-4 bg-red-50">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="font-semibold"><%= goal.name %></h3>
                <p class="text-sm text-red-600">Due on <%= goal.target_date.strftime('%b %d, %Y') %></p>
              </div>
              <div class="text-right">
                <p class="font-bold">K<%= number_with_precision(goal.current_amount, precision: 2) %> of K<%= number_with_precision(goal.target_amount, precision: 2) %></p>
                <p class="text-sm"><%= goal.progress_percentage %>% Complete</p>
              </div>
            </div>
            
            <div class="mt-4 flex justify-end space-x-2">
              <%= link_to "Update Progress", edit_financial_goal_path(goal), class: "text-blue-600 hover:text-blue-800" %>
              <%= link_to "Extend Deadline", edit_financial_goal_path(goal), class: "text-red-600 hover:text-red-800" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Quick Actions -->
<div class="fixed bottom-6 right-6">
  <div class="flex flex-col space-y-2">
    <%= link_to new_financial_goal_path, class: "bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-700" do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>
</div>
